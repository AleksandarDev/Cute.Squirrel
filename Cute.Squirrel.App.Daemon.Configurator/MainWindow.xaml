<Window
    x:Class="Cute.Squirrel.App.Daemon.Configurator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cute.Squirrel.App.Daemon.Configurator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="App Daemon Configurator"
    Width="525"
    Height="350"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Margin="8">
        <StackPanel Orientation="Vertical">
            <Label Content="Tribe URL" FontWeight="Bold" />
            <TextBox
                x:Name="ConfigurationUrlInput"
                Margin="4,4"
                Padding="8,4"
                Text="https://localhost:20825" />
            <Button
                Margin="4"
                Padding="32,4"
                HorizontalAlignment="Right"
                Click="ConfirmButtonOnClick"
                Content="Confirm" />
        </StackPanel>
    </Grid>
</Window>
